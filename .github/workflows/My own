name: my own site CI

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:<Emmy:art>[article]

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v2
    - name: Build the site in the my own/builder container
      run: |
        docker run \
        -v ${{ github.workspace }}:/srv/my own -v ${{ github.workspace }}/_site:/srv/jekyll/_site \
        My own/builder:latest /bin/bash -c "chmod -R 777 /srv/jekyll && jekyll build --future"
